<?xml version="1.0" encoding="utf-8"?>
<com.example.dell.recipebywx.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:left_btn_visible="true"
    app:center_tv_visible="true"
    app:center_tv_text="菜谱分类"
    android:orientation="vertical"
    tools:context="com.example.dell.recipebywx.home.CategoryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp">
            <TextView
                android:id="@+id/hot_tv"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/title_text"
                android:text="热门分类"
                android:textStyle="bold"/>
            <com.example.dell.recipebywx.CustomGridView
                android:id="@+id/hot_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:numColumns="5"
                android:verticalSpacing="2dp"></com.example.dell.recipebywx.CustomGridView>
            <TextView
                android:id="@+id/kinds_tv"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/title_text"
                android:text="菜式"
                android:textStyle="bold"/>
            <com.example.dell.recipebywx.CustomGridView
                android:id="@+id/kinds_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:numColumns="5"
                android:verticalSpacing="2dp"></com.example.dell.recipebywx.CustomGridView>
            <TextView
                android:id="@+id/mereria_tv"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/title_text"
                android:text="食材辅料"
                android:textStyle="bold"/>
            <com.example.dell.recipebywx.CustomGridView
                android:id="@+id/mereria_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:numColumns="5"
                android:verticalSpacing="2dp"></com.example.dell.recipebywx.CustomGridView>

            <TextView
                android:id="@+id/like_tv"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/title_text"
                android:text="口味"
                android:textStyle="bold"/>
            <com.example.dell.recipebywx.CustomGridView
                android:id="@+id/like_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:numColumns="5"
                android:verticalSpacing="2dp"></com.example.dell.recipebywx.CustomGridView>
        </LinearLayout>
    </ScrollView>


</com.example.dell.recipebywx.CustomToolBar>
