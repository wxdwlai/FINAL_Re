    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:left_btn_visible="true"
    app:left_btn_src="@drawable/back"
    app:center_tv_visible="true"
    app:center_tv_text="菜谱详情"
    android:orientation="vertical"
    tools:context="com.example.dell.recipebywx.search.RecipeDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/ns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/cooking_iv"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
                <TextView
                    android:id="@+id/cooking_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/title"
                    android:textStyle="bold"
                    android:text="菜名"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="15dp"
                    android:background="#efecec"/>
                <ImageView
                    android:id="@+id/user_icon_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/image_shape_corner"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/user_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="@color/title"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="16dp"
                    android:hint="用户名"
                    android:layout_marginTop="5dp"/>
