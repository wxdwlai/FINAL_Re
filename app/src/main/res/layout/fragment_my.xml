<com.example.dell.recipebywx.HomeToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:left_ll_src="@drawable/add"
    app:left_ll_visible="true"
    app:center_search_ll_visible="false"
    app:right_button_ll_visible="true"
    android:orientation="vertical"
    tools:context="com.example.dell.recipebywx.my.MyFragment">

    <LinearLayout
        android:id="@+id/no_user_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="14dp"
            android:textColor="@color/title_subtitle"
            android:text="您还未登录哦，登录后发现更多~"
            android:gravity="center"/>
        <TextView
            android:id="@+id/wx_login_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="使用微信登录"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/background_color_green"/>
        <TextView
            android:id="@+id/other_login_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16dp"
            android:text="其他方式登录"
            android:background="@color/background_color_red"/>
        <TextView
            android:id="@+id/register_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/background_color_red"
            android:text="没有账号，注册一个"/>
    </LinearLayout>

    <TextView
        android:id="@+id/user_id_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/background_color_red"
        android:visibility="gone"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/user_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp">
            <LinearLayout
                android:id="@+id/user_info_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/user_icon_iv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/image_shape_corner"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/user_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/title_text"
                            android:text="昵称"/>
                        <ImageView
                            android:id="@+id/user_sex_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/girl2"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/user_intro_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="bottom"
                        android:textColor="@color/title_text"
                        android:text="用户简介"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taset_like_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="口味偏好"
                    android:textColor="@color/title_text"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:src="@drawable/right" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/taset_rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:verticalSpacing="4dp"
                android:horizontalSpacing="8dp"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:background="@color/white"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="关注"
                    android:textColor="@color/title_text"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:src="@drawable/right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:background="@color/white"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="粉丝"
                    android:textColor="@color/title_text"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:src="@drawable/right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/views_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="我的足迹"
                    android:textColor="@color/title_text"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:src="@drawable/right" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/views_rcy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:id="@+id/recipe_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="我创建的菜谱"
                    android:textColor="@color/title_text"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:src="@drawable/right"
                    android:visibility="gone"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/recipe_rcy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/all_tv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14dp"
                android:textColor="@color/title_subtitle"
                android:textStyle="normal"
                android:gravity="right|center_vertical"
                android:text="查看全部"
                android:visibility="gone"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



</com.example.dell.recipebywx.HomeToolbar>
