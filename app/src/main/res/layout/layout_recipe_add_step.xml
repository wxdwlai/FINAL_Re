<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--菜谱步骤布局-->
    <TextView
        android:id="@+id/step_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:textSize="16dp"
        android:textColor="@color/title"/>
    <LinearLayout
        android:id="@+id/step_ll"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_below="@+id/step_tv"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/empty_step_ll"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:alpha="0.5"
                android:background="@drawable/add"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/title_subtitle"
                android:text="添加步骤图"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/step_iv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:visibility="gone"/>
    </LinearLayout>
    <EditText
        android:id="@+id/step_detail_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:textColor="@color/title_text"
        android:textSize="16dp"
        android:layout_below="@+id/step_ll"
        android:layout_marginBottom="15dp"
        android:hint="添加步骤说明"
        android:background="@null"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/step_detail_tv"
        android:background="#efecec"/>
</RelativeLayout>