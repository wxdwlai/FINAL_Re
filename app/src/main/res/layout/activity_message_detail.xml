<?xml version="1.0" encoding="utf-8"?>
<com.example.dell.recipebywx.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:left_btn_visible="true"
    app:left_btn_src="@drawable/back"
    app:center_tv_visible="true"
    app:center_tv_text="用户名"
    app:right_btn_visible="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.recipebywx.message.MessageDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/content_rcy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_ll"></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:background="@color/title_subtitle"
            android:layout_above="@+id/bottom_ll"/>
        <LinearLayout
            android:id="@+id/bottom_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@color/white"
            >
            <EditText
                android:id="@+id/input_etv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="4"
                android:hint="请输入内容"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:background="@null"/>
            <TextView
                android:id="@+id/send_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/title_subtitle"
                android:padding="4dp"
                android:text="发送"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>


</com.example.dell.recipebywx.CustomToolBar>
