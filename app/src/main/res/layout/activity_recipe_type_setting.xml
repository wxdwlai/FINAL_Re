<?xml version="1.0" encoding="utf-8"?>
<com.example.dell.recipebywx.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:left_btn_src="@drawable/back"
    app:left_btn_visible="true"
    app:center_tv_visible="true"
    app:center_tv_text="菜谱分类设置"
    android:orientation="vertical"
    tools:context="com.example.dell.recipebywx.my.TasteSettingActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        android:text="添加菜谱至分类"
        android:textColor="@color/background_color_red"/>

    <com.example.dell.recipebywx.CustomGridView
        android:id="@+id/type_grv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="15dp"
        android:numColumns="4"
        android:listSelector="@android:color/transparent"
        android:verticalSpacing="20dp"
        android:horizontalSpacing="15dp">
    </com.example.dell.recipebywx.CustomGridView>

    <TextView
        android:id="@+id/save_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/background_color_red"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:text="保存所有"
        android:gravity="center_horizontal"/>

</com.example.dell.recipebywx.CustomToolBar>
