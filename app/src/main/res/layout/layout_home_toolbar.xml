<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/toolbar_home_rlyt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/toolbar_left_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:id="@+id/toolbar_left_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/airplane_border"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toolbar_center_serch"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corner"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:id="@+id/toolbar_search_iv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/search"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="15dp"
                android:visibility="visible"
                android:paddingRight="4dp"/>
            <EditText
                android:id="@+id/toolbar_search_etv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/title_text"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:hint="搜索菜名、食材"
                android:paddingBottom="4dp"
                android:textColorHint="@color/title_subtitle"
                tools:ignore="InvalidId"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:background="@null"/>
            <TextView
                android:id="@+id/toolbar_search_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/title_text"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:hint="搜索菜名、食材"
                android:paddingBottom="4dp"
                android:textColorHint="@color/title_subtitle"
                tools:ignore="InvalidId"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:background="@null"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/clear_iv"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cancel3"
                    android:alpha="0.5"
                    android:padding="3dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_right_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:id="@+id/toolbar_right_iv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/setting"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_right_btn2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="8dp"
                android:layout_height="18dp"
                android:src="@drawable/right" />
        </LinearLayout>

        <TextView
            android:id="@+id/toolbar_right_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="@color/background_color_red"
            android:gravity="center"
            android:textSize="16dp"
            android:text="搜索"
            android:visibility="gone"/>

    </LinearLayout>
