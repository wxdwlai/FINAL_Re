<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cooking_img_iv"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="18dp"
        android:background="@drawable/cooking_image_border"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="18dp">
        <TextView
            android:id="@+id/cooking_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="菜名"
            android:textColor="@color/title"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/cooking_materia_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:textColor="@color/title_text"
            android:text="食材"/>
        <TextView
            android:id="@+id/cooking_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_subtitle"
            android:textSize="10dp"
            android:text="用户名"
            android:maxLines="2"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/cooking_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="@color/title_text"
                android:text="评分"
                android:layout_marginRight="5dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/cooking_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_text"
                android:textSize="10dp"
                android:text="人数"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
