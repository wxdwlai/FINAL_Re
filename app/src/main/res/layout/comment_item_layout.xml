<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/comment_item_logo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="18dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="14dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/comment_item_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/comment_item_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_text"
                    android:textSize="@dimen/text_size_14"
                    android:text="万霞" />
                <ImageView
                    android:id="@+id/id_user_sex_iv"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/girl2" />
            </LinearLayout>
            <TextView
                android:id="@+id/comment_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1小时前"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/title_subtitle"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/delete_comment_ll"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="right|center_vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="3dp"
                android:src="@drawable/dian"
                android:layout_marginRight="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_marginRight="18dp">
            <!--二级评论入口-->
            <LinearLayout
                android:id="@+id/id_comment_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/id_comment_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/comment_border"/>

                <TextView
                    android:id="@+id/id_comment_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="0"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/title_text"
                    android:textSize="14dp"/>
            </LinearLayout>
            <!--评论点赞-->
            <LinearLayout
                android:id="@+id/id_ups_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/comment_item_like"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/like_blank"/>
                <TextView
                    android:id="@+id/id_comment_up_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/title_subtitle"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/comment_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/title_text"
        android:textSize="14dp"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="18dp"
        android:text="从前有座山，山里有座庙，庙里有个老和尚从前有座山，山里有座庙，庙里有个老和尚从前有座山，山里有座庙，庙里有个老和尚从前有座山，山里有座庙，庙里有个老和尚"/>

    <TextView
        android:id="@+id/more_review_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="32dp"
        android:background="#f6f6f6"
        android:textColor="@color/title_subtitle"
        android:text="共9条回复"
        android:visibility="gone"/>
