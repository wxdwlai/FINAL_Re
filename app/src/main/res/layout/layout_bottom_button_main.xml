<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <LinearLayout
            android:id="@+id/ll_main_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_button_home"
                android:layout_width="28.4dp"
                android:layout_height="26.8dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/tv_main_button_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="首页"
                android:textColor="@color/title"
                android:textSize="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_collect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_button_collect"
                android:layout_width="28.4dp"
                android:layout_height="26.8dp"
                android:src="@drawable/collect" />

            <TextView
                android:id="@+id/tv_main_button_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="收藏"
                android:textColor="@color/title"
                android:textSize="10dp"/>
        </LinearLayout>


        <LinearLayout

            android:id="@+id/ll_main_message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_button_message"
                android:layout_width="28.4dp"
                android:layout_height="26.8dp"
                android:src="@drawable/message" />

            <TextView
                android:id="@+id/tv_main_button_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="消息"
                android:textColor="@color/title"
                android:textSize="10dp"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/ll_main_my"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_button_my"
                android:layout_width="28.4dp"
                android:layout_height="26.8dp"
                android:src="@drawable/user_home" />

            <TextView
                android:id="@+id/tv_main_button_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="我的"
                android:textColor="@color/title"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>