<com.example.dell.recipebywx.HomeToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:left_ll_visible="true"
    app:left_ll_src="@drawable/menu"
    app:center_search_text="搜索菜名、食材"
    app:center_search_ll_visible="true"
    app:right_button_ll_visible="true"
    tools:context="com.example.dell.recipebywx.home.HomeFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/style_of_cooking_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/style_of_cooking_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.example.dell.recipebywx.HomeToolbar>
